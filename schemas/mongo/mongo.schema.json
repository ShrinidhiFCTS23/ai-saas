{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "kind":{
          "type":"string",
          "enum": ["mongo"]
        },
        "flavor":{
          "type":"string",
          "enum": ["k8s"]
        },
        "version":{
          "type":"string",
          "enum": ["0.2"]
        }
      }
    },
    {
      "$ref": "#/$defs/specDef"
    },
    {
      "$ref": "#/$defs/outDef"
    },
    {
      "type": "object",
      "properties": {
        "advanced": {
          "type": "object",
          "allOf": [
            {
              "$ref": "flavor-k8s.schema.json"
            }
          ]
        }
      }
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata",
    "spec"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "authenticated": {
              "type": "boolean",
              "description": "Make this mongodb instance Password protected"
            },
            "mongo_version": {
              "type": "string",
              "description": "Version of mongodb e.g. 6.0, see valid tags here: https://hub.docker.com/_/mongo/tags?page=1",
              "minLength":3,
              "pattern" : "^(\\d+\\.)?(\\d+\\.)?(\\*|\\d+)$"
            },
            "size": {
              "allOf": [
                {
                  "type": "object",
                  "$ref": "../../traits/multi-instance-datastore-sizing.schema.json",
                  "required":["volume"]
                },
                {
                  "type": "object",
                  "properties": {
                    "replica_count": {
                      "type": "integer",
                      "description": "Number of instances for this Mongo, Min 1 [DEPRECATED]" ,
                      "multipleOf":1,
                      "minimum": 1,
                      "maximum":4
                    }
                  },
                  "required":["instance_count"]
                }              
              ]
            }
          },
          "required": [
            "authenticated",
            "mongo_version",
            "size"
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "allOf": [
            {
              "$ref": "#/$defs/specDef"
            },
            {
              "properties": {
                "interfaces": {
                  "type": "object",
                  "additionalProperties": false,
                  "$ref": "../../traits/reader-writer-interfaces.schema.json"
                },
                "instances": {
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^([a-z]*-[0-9]+)$": {
                      "$ref": "../../traits/interface.schema.json"
                    }
                  }
                }
              },
              "required": [
              ]
            }
          ]
        }
      }
    }
  }
}
