{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Description of the Postgres Schema",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "$ref": "#/$defs/specDef"
    },
    {
      "$ref": "#/$defs/outDef"
    },
    {
      "type": "object",
      "properties": {
        "advanced": {
          "type": "object",
          "description": "Advanced values to be used by different flavours of postgres",
          "anyOf": [
            {
              "$ref": "./flavor-aurora.schema.json"
            },
            {
              "$ref": "./flavor-cloudsql.schema.json"
            }
          ]
        }
      }
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata",
    "spec"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "description": "Required specifications for postgres instances",
          "additionalProperties": false,
          "properties": {
            "postgres_version": {
              "type": "string",
              "description": "Version of postgres e.g. 12.11"
            },
            "size": {
              "type": "object",
              "description": "Map containing necessary information for Reader and Writer",
              "$ref": "../../traits/reader-writer.schema.json"
            }
          },
          "required": [
            "postgres_version",
            "size"
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "description": "Output from the postgres module",
          "allOf": [
            {
              "$ref": "#/$defs/specDef"
            },
            {
              "properties": {
                "interfaces": {
                  "type": "object",
                  "additionalProperties": false,
                  "$ref": "../../traits/reader-writer-interfaces.schema.json",
                  "description": "Map of reader and writer endpoints generated by the module"
                },
                "instances": {
                  "type": "object",
                  "description": "Map of instances generated by the module",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^([a-z]*-[0-9]+)$": {
                      "$ref": "../../traits/interface.schema.json"
                    }
                  }
                },
                "postgresVersion": {
                  "type": "string",
                  "description": "Version of postgres e.g. 12.11"
                },
                "excludedDatabases": {
                  "type": "list",
                  "description": "List of databases to be excluded for prometheus-postgres-exporter"
                },
                "defaultDatabase": {
                  "type": "string",
                  "description": "Default database for the connection string of prometheus-postgres-exporter"
                }
              },
              "required": [
              ]
            }
          ]
        }
      }
    }
  }
}