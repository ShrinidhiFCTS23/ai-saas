{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "default": "job"
        },
        "job": {
            "type": "object",
            "properties": {
                "retry": {
                    "type": "integer",
                    "description": "the number of time you want to retry the job before calling it a failure"
                }
            },
            "required": [
                "retry"
            ]
        }
    },
    "required": ["job", "type"]
}